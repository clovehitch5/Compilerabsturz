                = "R" .
                = "S" .
                = "T" .
                = "U" .
                = "V" .
                = "W" .
                = "X" .
                = "Y" .
                = "Z" .
> .

Leerzeichen =<
            = " " .
            = " " Leerzeichen .
> .

WSO =<
            = .                     -- optionales Leerzeichen .
            = Leerzeichen .         -- optionales Leerzeichen
> .





GanzzahlLiteral:[Value: long] {Value:= 0;}.
Bezeichner:     [Name: tIdent] {Name := NoIdent;}.